{
  "name": "root",
  "private": true,
  "description": "A monorepo starter for UI components. Use lerna,yarn workspaces, rollup, storybook etc.",
  "author": "GuangHui <bryanadamss@foxmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --parallel",
    "commit": "git-cz",
    "predev": "yarn doc:lib",
    "dev": "start-storybook -p 6006",
    "doc:comp": "build-storybook -o ./docs-static",
    "doc:lib": "lerna run jsdoc2mdx --parallel",
    "doc": "yarn doc:lib && yarn doc:comp",
    "test": "jest --config test/unit/jest.config.js --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.13.12",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@lerna/project": "^4.0.0",
    "@ls-lint/ls-lint": "^1.9.2",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/vue": "^6.2.9",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/test-utils": "^1.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.5.0",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "jsdoc": "^3.6.6",
    "jsdoc-to-markdown": "^7.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "minami": "^1.2.3",
    "prettier": "^2.2.1",
    "rollup": "^2.39.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^5.1.6",
    "stylelint": "^13.12.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.1.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "vue": "^2.6.12",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{json,md,html,flow,ts,tsd}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{sass,scss,vue,css,less,stylus}": [
      "stylelint --fix",
      "git add"
    ],
    "*": [
      "ls-lint"
    ]
  }
}
