{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": ["**/__tests__/**", "**/*.md"],
  "command": {
    "bootstrap": {
      "registry": "https://registry.npm.taobao.org/"
    },
    "run": {
      "npmClient": "yarn"
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "allowBranch": ["main", "master"],
      "noCommitHooks": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}
